{
  "schedules": [
    {
      "name": "daily_transcripts",
      "enabled": true,
      "command": "earnings-download-transcripts",
      "schedule": {
        "type": "daily",
        "time": "02:00"
      },
      "timeout": 3600,
      "description": "Download current month transcripts daily at 2 AM"
    },
    {
      "name": "weekly_full_sync",
      "enabled": true,
      "command": "earnings-download-transcripts --all --delay 2.0",
      "schedule": {
        "type": "weekly",
        "day": "sunday",
        "time": "03:00"
      },
      "timeout": 14400,
      "description": "Full historical sync every Sunday at 3 AM (4 hour timeout)"
    },
    {
      "name": "sec_filings_monitor",
      "enabled": true,
      "command": "earnings-download-sec --ticker AAPL MSFT GOOGL AMZN --forms 10-K 10-Q",
      "schedule": {
        "type": "interval",
        "hours": 6
      },
      "timeout": 3600,
      "description": "Check for new SEC filings every 6 hours for major tickers"
    },
    {
      "name": "daily_index_update",
      "enabled": true,
      "command": "earnings-index --update",
      "schedule": {
        "type": "daily",
        "time": "04:00"
      },
      "timeout": 1800,
      "description": "Update index daily after transcript downloads"
    },
    {
      "name": "monthly_full_reindex",
      "enabled": false,
      "command": "earnings-index --rebuild",
      "schedule": {
        "type": "cron",
        "cron": "0 5 1 * *"
      },
      "timeout": 7200,
      "description": "Full index rebuild on 1st of each month at 5 AM (currently disabled)"
    },
    {
      "name": "custom_backup_script",
      "enabled": false,
      "command": "/path/to/backup_script.sh",
      "schedule": {
        "type": "daily",
        "time": "05:00"
      },
      "timeout": 1800,
      "working_dir": "/home/user/backups",
      "description": "Run custom backup script daily"
    }
  ],
  "logging": {
    "level": "INFO",
    "file": null,
    "rotation": "daily",
    "retention_days": 30,
    "max_bytes": 10485760
  },
  "error_handling": {
    "max_retries": 3,
    "retry_delay_minutes": 15,
    "send_notifications": false,
    "notification_email": null
  }
}
